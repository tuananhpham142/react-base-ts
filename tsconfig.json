{
  "extends": "./tsconfig.custom.json",
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "removeComments": true,
    "sourceMap": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "node_modules",
    ".next",
    "next.config.js"
  ],
  "include": [
    "declaration.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "typeRoots": [
    "../node_modules/@types",
    "../@types"
  ]
}